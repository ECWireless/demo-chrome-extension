{
  "mount": {
    "src": "/"
  },
  "plugins": [
    [
      "@snowpack/plugin-build-script",
      {
        "cmd": "postcss",
        "input": [
          ".css"
        ],
        "output": [
          ".css"
        ]
      }
    ]
  ],
  "buildOptions": {
    "metaUrlPath": "snowpack_meta"
  },
  "optimize": {
    "bundle": true,
    "minify": true,
    "target": "es2018"
  }
}